<%- include ('partials/header.ejs') %> 
<body>
    <%- include ('partials/navbar.ejs') %> 
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="corpo">Resposta:</label>
            <textarea name="corpo" cols="20" rows="5" class="form-control" placeholder="Digite sua resposta"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button type="submit" class="btn btn-info">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %> </p>
                </div>
            </div>
        <% }) %> 
    </div>
</body>
<%- include ('partials/footer.ejs') %> 